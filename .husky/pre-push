#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Use a separate build directory to avoid conflicts with running dev server
export NEXT_BUILD_DIR=".next-ci"

# Run linting
echo "ğŸ“ Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix errors before pushing."
  rm -rf "$NEXT_BUILD_DIR"
  exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type-check..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix errors before pushing."
  rm -rf "$NEXT_BUILD_DIR"
  exit 1
fi

# Run build (uses separate directory via NEXT_BUILD_DIR)
echo "ğŸ—ï¸  Running build..."
pnpm build
BUILD_EXIT_CODE=$?

# Clean up the CI build directory
rm -rf "$NEXT_BUILD_DIR"

if [ $BUILD_EXIT_CODE -ne 0 ]; then
  echo "âŒ Build failed. Please fix errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
