{
  "name": "developer-blog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "create": "node scripts/posts/createPost.mjs",
    "publish": "node scripts/posts/publishPost.mjs",
    "tags:collect": "node scripts/posts/collectTags.mjs",
    "kill:ports": "for port in {3000..3009}; do lsof -ti:$port | xargs kill -9 2>/dev/null; done",
    "dev:all": "scripts/dev-all.sh 3000",
    "setup": "scripts/setup.sh",
    "docs:dev": "echo 'Run pnpm dev and visit http://localhost:3000/presenter-docs'"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "date-fns": "^3.6.0",
    "gray-matter": "^4.0.3",
    "next": "15.5.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "3.3.1",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@typescript-eslint/parser": "^8.46.2",
    "@types/node": "24.8.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.11",
    "eslint": "9.37.0",
    "eslint-config-next": "15.5.7",
    "eslint-config-prettier": "10.1.8",
    "postcss": "^8",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.9.3"
  }
}
